<Window x:Class="F1MUniverse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="F1MUniverse"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <!-- Styles / theme -->
    <Window.Resources>
        <!-- Left navigation button style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter Margin="4"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#232323"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid styles for the standings layout -->
        <Style x:Key="StandingsColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#1C1C1C"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8,6"/>
        </Style>

        <Style x:Key="StandingsCellTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F5F5F5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,0"/>
        </Style>

        <Style x:Key="StandingsCenterCellTextStyle" TargetType="TextBlock"
               BasedOn="{StaticResource StandingsCellTextStyle}">
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StandingsRightCellTextStyle" TargetType="TextBlock"
               BasedOn="{StaticResource StandingsCellTextStyle}">
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <!-- Main layout: left menu, right content -->
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Left sidebar -->
            <ColumnDefinition Width="220"/>
            <!-- Main content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <DockPanel Grid.Column="0" Background="#181818">
            <!-- Logo / title at the top -->
            <Border Background="#1F1F1F" Padding="16" DockPanel.Dock="Top">
                <StackPanel>
                    <TextBlock Text="F1MUniverse"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#FFFFFF"/>
                    <TextBlock Text="Save &amp; DB editor"
           FontSize="12"
           Foreground="#9E9E9E"/>
                </StackPanel>
            </Border>

            <!-- Navigation buttons -->
            <StackPanel Margin="12,16,12,12">
                <TextBlock Text="SEASONS"
                           Margin="4,0,0,8"
                           Foreground="#777"
                           FontSize="11"
                           FontWeight="SemiBold"/>

                <Button Style="{StaticResource NavButtonStyle}"
                        Content="🏁 Standings"
                        Click="StandingsButton_Click"/>

                <Button Style="{StaticResource NavButtonStyle}"
                        Content="📄 Contracts"
                        Click="ContractsButton_Click"/>

                <Button Style="{StaticResource NavButtonStyle}"
                        Content="📅 Calendar (later)"
                        IsEnabled="False"/>

                <Separator Margin="0,16,0,8" Background="#333"/>

                <TextBlock Text="OTHER"
                           Margin="4,0,0,8"
                           Foreground="#777"
                           FontSize="11"
                           FontWeight="SemiBold"/>

                <Button Style="{StaticResource NavButtonStyle}"
                        Content="⚙ Settings (later)"
                        IsEnabled="False"/>
            </StackPanel>
        </DockPanel>

        <!-- RIGHT MAIN AREA -->
        <Grid Grid.Column="1" Background="#202020">
            <Grid.RowDefinitions>
                <!-- Top bar -->
                <RowDefinition Height="52"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Border Background="#1A1A1A"
                    BorderBrush="#2B2B2B"
                    BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="16,0">
                    <TextBlock x:Name="TopTitleText"
                               Text="Dashboard"
                               FontSize="16"
                               Foreground="#FFFFFF"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="  •  F1 / F2 / F3 save editor"
                               Margin="8,2,0,0"
                               FontSize="12"
                               Foreground="#A0A0A0"/>
                </StackPanel>
            </Border>

            <!-- Content area -->
            <Grid Grid.Row="1" Margin="16">
                <Border Background="#252525"
                        CornerRadius="10"
                        Padding="16">
                    <StackPanel x:Name="ContentStackPanel">
                        <!-- Title + description -->
                        <TextBlock x:Name="ContentTitleText"
                                   Text="Welcome!"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#FFFFFF"
                                   Margin="0,0,0,4"/>

                        <TextBlock x:Name="ContentBodyText"
                                   Text="Choose a section on the left to get started (Standings or Contracts)."
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#D0D0D0"
                                   Margin="0,0,0,12"/>

                        <!-- Filters for standings (hidden by default) -->
                        <StackPanel x:Name="StandingsFilterPanel"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,8"
                                    Visibility="Collapsed">
                            <TextBlock Text="Series:"
                                       VerticalAlignment="Center"
                                       Foreground="#CCCCCC"
                                       Margin="0,0,4,0"/>
                            <ComboBox x:Name="SeriesComboBox"
                                      Width="80"
                                      SelectedIndex="0"
                                      SelectionChanged="SeriesComboBox_SelectionChanged">
                                <ComboBoxItem Content="F1"/>
                                <ComboBoxItem Content="F2"/>
                                <ComboBoxItem Content="F3"/>
                            </ComboBox>

                            <TextBlock Text="   Season:"
                                       VerticalAlignment="Center"
                                       Foreground="#CCCCCC"
                                       Margin="12,0,4,0"/>
                            <ComboBox x:Name="SeasonComboBox"
                                      Width="90"
                                      SelectedIndex="1"
                                      SelectionChanged="SeasonComboBox_SelectionChanged">
                                <ComboBoxItem Content="2024"/>
                                <ComboBoxItem Content="2025"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Filters for contracts (hidden by default) -->
                        <StackPanel x:Name="ContractsFilterPanel"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,8"
                                    Visibility="Collapsed">
                            <TextBlock Text="Series:"
                                       VerticalAlignment="Center"
                                       Foreground="#CCCCCC"
                                       Margin="0,0,4,0"/>
                            <ComboBox x:Name="ContractsSeriesComboBox"
                                      Width="80"
                                      SelectedIndex="0"
                                      SelectionChanged="ContractsFilter_SelectionChanged">
                                <ComboBoxItem Content="F1"/>
                                <ComboBoxItem Content="F2"/>
                                <ComboBoxItem Content="F3"/>
                            </ComboBox>

                            <TextBlock Text="   Season:"
                                       VerticalAlignment="Center"
                                       Foreground="#CCCCCC"
                                       Margin="12,0,4,0"/>
                            <ComboBox x:Name="ContractsSeasonComboBox"
                                      Width="90"
                                      SelectedIndex="2"
                                      SelectionChanged="ContractsFilter_SelectionChanged">
                                <ComboBoxItem Content="2023"/>
                                <ComboBoxItem Content="2024"/>
                                <ComboBoxItem Content="2025"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Here we place the DataGrid or other content -->
                        <Grid x:Name="ContentGrid">
                            <TextBlock x:Name="StandingsEmptyStateText"
                                       Text="Select a series and season to view the standings."
                                       Foreground="#B0B0B0"
                                       Margin="0,12,0,0"
                                       Visibility="Collapsed"/>

                            <TextBlock x:Name="ContractsEmptyStateText"
                                       Text="No contracts match the current filter yet."
                                       Foreground="#B0B0B0"
                                       Margin="0,12,0,0"
                                       Visibility="Collapsed"/>

                            <DataGrid x:Name="StandingsDataGrid"
                                      AutoGenerateColumns="False"
                                      Background="#1F1F1F"
                                      BorderBrush="#2E2E2E"
                                      BorderThickness="1"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#2F2F2F"
                                      HeadersVisibility="Column"
                                      IsReadOnly="True"
                                      Margin="0,4,0,0"
                                      RowBackground="#1B1B1B"
                                      AlternatingRowBackground="#212121"
                                      RowHeight="40"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Visibility="Collapsed">
                                <DataGrid.ColumnHeaderStyle>
                                    <StaticResource ResourceKey="StandingsColumnHeaderStyle"/>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Foreground" Value="#F5F5F5"/>
                                        <Setter Property="BorderBrush" Value="#2F2F2F"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Position"
                                                        Binding="{Binding Position}"
                                                        Width="90"
                                                        ElementStyle="{StaticResource StandingsCenterCellTextStyle}"/>
                                    <DataGridTextColumn Header="Driver"
                                                        Binding="{Binding Driver}"
                                                        Width="*"
                                                        ElementStyle="{StaticResource StandingsCellTextStyle}"/>
                                    <DataGridTextColumn Header="Team"
                                                        Binding="{Binding Team}"
                                                        Width="*"
                                                        ElementStyle="{StaticResource StandingsCellTextStyle}"/>
                                    <DataGridTextColumn Header="Points"
                                                        Binding="{Binding Points}"
                                                        Width="90"
                                                        ElementStyle="{StaticResource StandingsRightCellTextStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <DataGrid x:Name="ContractsGrid"
                                      AutoGenerateColumns="False"
                                      Background="#1F1F1F"
                                      BorderBrush="#2E2E2E"
                                      BorderThickness="1"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="False"
                                      CanUserSortColumns="False"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#2F2F2F"
                                      HeadersVisibility="Column"
                                      IsReadOnly="True"
                                      Margin="0,4,0,0"
                                      RowBackground="#1B1B1B"
                                      AlternatingRowBackground="#212121"
                                      RowHeight="40"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      Visibility="Collapsed">
                                <DataGrid.ColumnHeaderStyle>
                                    <StaticResource ResourceKey="StandingsColumnHeaderStyle"/>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Foreground" Value="#F5F5F5"/>
                                        <Setter Property="BorderBrush" Value="#2F2F2F"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Driver"
                                                        Binding="{Binding Driver}"
                                                        Width="2*"
                                                        ElementStyle="{StaticResource StandingsCellTextStyle}"/>
                                    <DataGridTextColumn Header="Team"
                                                        Binding="{Binding Team}"
                                                        Width="2*"
                                                        ElementStyle="{StaticResource StandingsCellTextStyle}"/>
                                    <DataGridTextColumn Header="Series"
                                                        Binding="{Binding Series}"
                                                        Width="80"
                                                        ElementStyle="{StaticResource StandingsCenterCellTextStyle}"/>
                                    <DataGridTextColumn Header="StartSeason"
                                                        Binding="{Binding StartSeason}"
                                                        Width="80"
                                                        ElementStyle="{StaticResource StandingsCenterCellTextStyle}"/>
                                    <DataGridTextColumn Header="EndSeason"
                                                        Binding="{Binding EndSeason}"
                                                        Width="80"
                                                        ElementStyle="{StaticResource StandingsCenterCellTextStyle}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>